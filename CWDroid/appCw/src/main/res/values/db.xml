<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="db_dir" translatable="false">cwdroid_db</string>
    
    <!-- Database version should be updated if schema was changed in major updates. -->
    <integer name="dbversion">1</integer>

    <!-- Name of the whole database. -->
    <string name="db_name" translatable="false">cwdroid.db</string>

    <!-- Package names of all the classes listed in dbtables. -->
    <string name="classprefix" translatable="false">com.drisoftie.cwdroid.domain.%1$s</string>

    <!-- Name of the classes to be mapped into database tables. -->
    <string-array name="dbtables" translatable="false">
        <item>CwBlog</item>
        <item>CwNews</item>
        <item>CwComment</item>
        <item>CwMessage</item>
        <item>CwPicture</item>
        <item>CwUser</item>
        <item>CwVideo</item>
    </string-array>

</resources>
<RelativeLayout
    style="?android:detailsElementBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ProgressBar
        android:id="@id/prog_bag"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:max="100"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@id/ll_bag_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@id/btn_travel_bags_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"/>

        <Spinner
            android:id="@id/spin_bag_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@id/txt_head_bag"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="@string/title_bag"/>

        <ListView
            android:id="@id/list_bag"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <TextView
            android:id="@id/txt_list_empty"
            style="@style/textFont.blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:text="@string/list_bag_not_selected"/>
    </LinearLayout>

</RelativeLayout>
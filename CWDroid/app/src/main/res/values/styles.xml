<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, while customizations related to backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/app_theme_dark</item>
        <item name="colorPrimaryDark">@color/app_theme</item>
        <item name="colorAccent">@color/app_accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="textFont" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="textFont.big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textFont.blue">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="textFont.blue.bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textFont.blue.bold.big">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textFont.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Btn_Bag_Action">
        <item name="android:layout_width">@dimen/btn_bag_action</item>
        <item name="android:layout_height">@dimen/btn_bag_action</item>
        <item name="android:background">@drawable/btn_holo_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Bag_Info">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
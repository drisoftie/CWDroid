<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme, dependent on API level. This theme is replaced by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, while customizations related to backward-compatibility can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:colorPrimary">@color/app_theme</item>
        <item name="android:colorPrimaryDark">@color/app_theme_dark</item>
        <item name="android:colorAccent">@color/app_accent</item>
        <item name="android:navigationBarColor">@color/app_theme</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

</resources>